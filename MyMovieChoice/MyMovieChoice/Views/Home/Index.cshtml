@model List<MyMovieChoice.Models.MovieList>

@{
    ViewData["Title"] = "Home Page";
}

<p>Loading your movies ......</p>


<div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin:0 auto">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">


            <div class="item active">
                <img src="~/images/logo.PNG" width="200" height="300" alt="Los Angeles" style="margin:auto">
            </div>


            @foreach (var item in Model)
            {
            <div class="item">
                <img src="@item.Picture" width="200" height="300" alt="New York" style="margin:auto">
                <div class="carousel-caption" role="option" style="elevation:below">
                    <p> 
                        @{TempData["Title"] = @item.Title;}
                    </p>
                </div>
            </div>
                
            }

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<div style="text-align:center">
    @TempData["Title"]
</div>
