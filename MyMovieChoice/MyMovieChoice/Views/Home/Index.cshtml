@model List<MyMovieChoice.Models.MovieList>

@{
    ViewData["Title"] = "Home Page";
}



<p>Loading your movies ......</p>


<div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin:0 auto">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">


        <div class="item active">
            <img src="~/images/logo.PNG" width="200" height="300" alt="Los Angeles" style="margin:auto">
        </div>


        @foreach (var item in Model)
        {
            <div class="item">
                <img src="@item.Picture" width="200" height="300" alt="New York" style="margin:auto">
                @*@{TempData["WhichMovie"] = item.MovieListID}*@
                <div class="carousel-caption" role="option" style="elevation:below">
                    <p>
                        @{TempData["Title"] = @item.Title;}
                    </p>
                </div>
            </div>

        }

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div style="text-align:center;font-size:30px;">
    @TempData["Title"]
</div>
<hr />
<div style="text-align:center" class="row">
    <button onclick="change()">
        <i class="far fa-thumbs-up fa-4x" style="padding:10px" id="icon"></i>
    </button>
    <button onclick="change2()">
        <i class="fas fa-film fa-4x" style="padding:10px" id="icon2"></i>
    </button>
    <button onclick="change3()">
        <i class="far fa-thumbs-down fa-4x" style="padding:10px" id="icon3"></i>
    </button>
</div>

<script>
    function change() {
        document.getElementById("icon").style.color = "blue"
        @*@Model.Vote.Upvote*@
    }
    function change2() { document.getElementById("icon2").style.color = "yellow" }
    function change3() { document.getElementById("icon3").style.color = "red" }
</script>

